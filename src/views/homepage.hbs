<html lang="en">

<head>
    <title>Home</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/ca0d395c8b.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;700&display=swap" rel="stylesheet" />
    <link href="/css/project.css?v=1" rel="stylesheet" />
    <link href="/css/navbar-responsive.css" rel="stylesheet" />
    <link href="/css/color.css" rel="stylesheet" />
    <link href="/css/hover_and_click.css" rel="stylesheet" />
    <link href="/css/font_size.css" rel="stylesheet" />

    <style>
        .fw-medium {
            font-weight: 600;
        }
    </style>
</head>

<body>
    <div class="container-fluid" style="height: 100vh; padding: 0;">
        <div class="" style="height: 100%; display: flex; flex-direction: column; padding: 0; margin: 0;">
            <div class="row header align-items-center justify-content-between flex-row"
                style="min-height: 60px; padding: 0; width: 100%;">
                <div class="col-auto">
                    <a href="#home">
                        <img class="logo" src="/img/app-icon.png" alt="logo"
                            style="height: 40px; width: 40px; margin-left: 40px;" />
                    </a>
                </div>
                <div class="col-auto search-bar">
                    <div class="form">
                        <input type="text" id="search-input" class="form-control" placeholder="Search anything ..."
                            style="color: #23235F; font-weight: 300;" />
                        <i class="bi bi-search" style="opacity: 50%;"></i>
                    </div>
                </div>
                <div class="col-auto header-append">
                    <i class="bi bi-bell fs-4 hover-icon"></i>
                    <i class="bi bi-person-circle fs-4 hover-icon" style="margin-left: 20px;"></i>
                    <div class="dropdown-button" style="display: inline;">
                        <a class="" type="button" id="dropDownMenu" data-bs-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false" style="color: #000;">
                            <i class="bi bi-chevron-down" style="color: #5051F9;"></i>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropDownMenu">
                            <a class="dropdown-item" href="#">Profile</a>
                            <a class="dropdown-item" href="#">Settings</a>
                            <a class="dropdown-item" href="#" onclick="logout()">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main flex-grow-1" style="display: flex; flex-direction: row; width: 100%;">
                <div class="sidebar d-flex flex-column justify-content-evenly" style="width: 120px;">
                    <a class="active" href="#home">
                        <div class="sidebar-element">
                            <div class="icon">
                                <i class="bi bi-house-heart"></i>
                            </div>
                            <div class="text">
                                <span>Home</span>
                            </div>
                        </div>
                    </a>
                    <a href="#home">
                        <div class="sidebar-element">
                            <div class="icon">
                                <i class="bi bi-kanban"></i>
                            </div>
                            <div class="text">
                                <span>Projects</span>
                            </div>
                        </div>
                    </a>
                    <a href="#home">
                        <div class="sidebar-element">
                            <div class="icon">
                                <i class="bi bi-person-bounding-box"></i>
                            </div>
                            <div class="text">
                                <span>Administrator</span>
                            </div>
                        </div>
                    </a>
                    <a href="#home">
                        <div class="sidebar-element">
                            <div class="icon">
                                <i class="bi bi-rocket-takeoff"></i>
                            </div>
                            <div class="text">
                                <span>Performance</span>
                            </div>
                        </div>
                    </a>
                    <a href="#home">
                        <div class="sidebar-element">
                            <div class="icon">
                                <i class="bi bi-clipboard2"></i>
                            </div>
                            <div class="text">
                                <span>Task</span>
                            </div>
                        </div>
                    </a>
                    <a href="#home">
                        <div class="sidebar-element">
                            <div class="icon">
                                <i class="bi bi-box-seam"></i>
                            </div>
                            <div class="text">
                                <span>Productivity</span>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="main-content"
                    style="background-color: #f3f4f8; display: flex; flex-direction: column; width: calc(100% - 120px);">
                    <div class="main-area flex-grow-1 px-3" style="min-height: 600px;">
                        <!-- status of task -->
                        <div class="row align-items-center mt-3 d-none d-md-flex flex-nowrap overflow-auto pb-2">
                            <div class="col d-none d-lg-block white-hover">
                                <div class="container-fluid task-status p-3 hover-shadow-box">
                                    <div class="row align-items-center">
                                        <div class="col-2">
                                            <div class="circle primary-background">
                                                <div class="inner-icon">
                                                    <i class="bi bi-star color-gray fs-6"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-7">
                                            <div class="fw-medium fs-6 color-gray">
                                                Task Completed
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="fw-bold fs-4 color-black">
                                                08
                                            </div>
                                        </div>
                                    </div>

                                    <hr class="horizontal-line gray-background" />

                                    <div class="status-container mt-4 row align-items-center">
                                        <div class="col status-line">
                                            <img src="/img/status-line-1.png" alt="status-line" width="115" />
                                        </div>
                                        <div class="col status-line-description ps-0">
                                            <div class="align-end">
                                                <span class="color-green fw-bold fs-6">
                                                    10+
                                                </span>
                                                <span class="fs-6 fw-medium color-gray ms-1">
                                                    more
                                                </span>
                                            </div>
                                            <div class="align-end">
                                                <span class="fs-6 fw-medium color-gray">
                                                    from last week
                                                </span>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="col d-none d-md-block">
                                <div class="container-fluid task-status p-3 hover-shadow-box">
                                    <div class="row align-items-center">
                                        <div class="col-2">
                                            <div class="circle primary-background">
                                                <div class="inner-icon">
                                                    <i class="bi bi-file-earmark-text color-gray fs-6"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-7">
                                            <div class="fs-6 fw-medium color-gray">
                                                New Task
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="fw-bold fs-4 color-black">
                                                10
                                            </div>
                                        </div>
                                    </div>

                                    <hr class="horizontal-line gray-background" />

                                    <div class="status-container mt-4 row align-items-center">
                                        <div class="col status-line">
                                            <img src="/img/status-line-2.png" alt="status-line" width="115" />
                                        </div>
                                        <div class="col status-line-description ps-0">
                                            <div class="align-end">
                                                <span class="color-green fw-bold fs-6">
                                                    10+
                                                </span>
                                                <span class="fs-6 fw-medium color-gray ms-1">
                                                    more
                                                </span>
                                            </div>
                                            <div class="align-end">
                                                <span class="fs-6 fw-medium color-gray">
                                                    from last week
                                                </span>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="col">
                                <div class="container-fluid task-status p-3 hover-shadow-box">
                                    <div class="row align-items-center">
                                        <div class="col-2">
                                            <div class="circle primary-background">
                                                <div class="inner-icon">
                                                    <i class="bi bi-star color-gray fs-6"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-7">
                                            <div class="fs-6 fw-medium color-gray">
                                                Project Done
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="fw-bold fs-4 color-black">
                                                10
                                            </div>
                                        </div>
                                    </div>

                                    <hr class="horizontal-line gray-background" />

                                    <div class="status-container mt-4 row align-items-center">
                                        <div class="col status-line">
                                            <img src="/img/status-line-3.png" alt="status-line" width="115" />
                                        </div>
                                        <div class="col status-line-description ps-0">
                                            <div class="align-end">
                                                <span class="color-green fw-bold fs-6">
                                                    08+
                                                </span>
                                                <span class="fs-6 fw-medium color-gray ms-1">
                                                    more
                                                </span>
                                            </div>
                                            <div class="align-end">
                                                <span class="fs-6 fw-medium color-gray">
                                                    from last week
                                                </span>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- add project -->
                            <div class="col-2 d-flex justify-content-center align-items-center">
                                <div class="add-project hover-to-bg-light-violet clickable hover-shadow-box"
                                    data-bs-toggle="modal" data-bs-target="#modal-create-project">
                                    <i class="bi bi-plus-circle mb-1 fs-3"></i>
                                    <div class="fs-6 fw-medium">
                                        Add Project
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- title of project list -->
                        <div class="row align-items-center mt-3">
                            <div class="col-lg-2 col-4 fw-bold fs-4 color-deep-violet">
                                Project List
                            </div>

                            <!-- add-project -->
                            <div class="col-lg-4 col-8">
                                <div class="add-new-project p-2 hover-to-bg-darken-green clickable"
                                    data-bs-toggle="modal" data-bs-target="#modal-create-project">
                                    <i class="bi bi-plus-lg color-deep-violet fs-3"></i>
                                    <span class="color-deep-violet fw-medium fs-5 ps-2">Add New Project</span>
                                </div>
                            </div>

                            <!-- sort -->
                            <div class="col-lg-6 col-12 d-none d-sm-block mt-sm-3 mt-lg-0">
                                <div class="row align-items-center">
                                    <div class="col d-block d-lg-none">

                                    </div>
                                    <div class="col-2 text-center pt-4">
                                        <span class="color-deep-violet fw-medium fs-4">Sort</span>
                                    </div>
                                    <div class="col-lg-5 col-4">
                                        <div>
                                            <div class="color-deep-violet fw-medium fs-6 mb-1">Project Name</div>
                                            <select class="form-select form-select-sm"
                                                aria-label=".dropdown-for-project-name">
                                                <option selected>--</option>
                                                <option value="1">Asc</option>
                                                <option value="2">Decs</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-5 col-4">
                                        <div>
                                            <div class="color-deep-violet fw-medium fs-6 mb-1">Created Date</div>
                                            <select class="form-select form-select-sm"
                                                aria-label=".dropdown-for-created-date">
                                                <option selected>--</option>
                                                <option value="1">Asc</option>
                                                <option value="2">Decs</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- project list -->
                        <div class="mt-3">
                            <div class="row flex-nowrap overflow-auto pb-2">
                                {{#each projects}}
                                <div class="col-auto">
                                    <div class="container-fluid project-tag p-3 hover-shadow-box clickable"
                                        onclick="location.href='/project/{{id}}/overview';">
                                        <div class="row align-items-center">
                                            <div class="col-2">
                                                <div class="circle primary-background">
                                                    <div class="inner-icon color-blue">
                                                        <i class="bi bi-file-earmark-code fs-6"></i>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-8">
                                                <div
                                                    class="fs-6 fw-medium color-deep-violet project-title clickable hover-to-blue">
                                                    {{name}}
                                                </div>
                                            </div>
                                            <div class="col-2">
                                                <div class="color-black">
                                                    <i class="bi bi-three-dots-vertical hover-to-bg-gray"></i>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row align-items-center mt-2">
                                            <div class="col-5 fs-6 fw-medium color-gray pe-0">
                                                Created by :
                                            </div>
                                            <div class="col-7 fs-6 fw-medium color-black">
                                                {{created_by}}
                                            </div>
                                        </div>

                                        <div class="row align-items-center">
                                            <div class="col-5 fs-6 fw-medium color-gray pe-0">
                                                Created on :
                                            </div>
                                            <div class="col-7 fs-6 fw-medium color-black">
                                                {{formatDate created_on}}
                                                {{!-- abb --}}
                                            </div>
                                        </div>

                                        <hr class="horizontal-line gray-background" />

                                        <div class="row p-0 justify-content-center">
                                            <div class="col-4 p-0">
                                                <div class="fs-6 fw-medium color-deep-violet text-center">
                                                    Test Cases
                                                </div>
                                                <div class="fw-medium fs-4 color-deep-violet text-center mt-2">
                                                    {{num_testcases}}
                                                </div>
                                            </div>

                                            <div class="col-4 p-0">
                                                <div class="fs-6 fw-medium color-deep-violet text-center">
                                                    Test Run
                                                </div>
                                                <div class="fw-medium fs-4 color-deep-violet text-center mt-2">
                                                    {{num_testruns}}
                                                </div>
                                            </div>

                                            <div class="col-4 p-0">
                                                <div class="fs-6 fw-medium color-deep-violet text-center">
                                                    Issues
                                                </div>
                                                <div class="fw-medium fs-4 color-deep-violet text-center mt-2">
                                                    {{num_issues}}
                                                </div>
                                            </div>
                                        </div>

                                        <hr class="horizontal-line gray-background mb-3 mt-4" />

                                        <div class="row items-align-center">
                                            <!-- add-user -->
                                            <div class="col-8 add-user" data-project-id="{{id}}">
                                                <i class="bi bi-person-add fs-4"></i>
                                                <span class="color-deep-violet fs-6 fw-medium ps-1">Add User</span>
                                            </div>

                                            <!-- hidden -->
                                            <div class="col-2 p-0">
                                                <i class="bi bi-eye-fill fs-4 hover-to-blue clickable"></i>
                                            </div>

                                            <!-- delete -->
                                            <div class="col-2 p-0">
                                                <i class="bi bi-trash3 fs-4 hover-to-red clickable delete-project" data-project-id="{{id}}"></i>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>

                        <!-- Task -->
                        <div class="fw-bold fs-4 color-deep-violet mt-3">
                            Task Assigned To Me
                        </div>

                        <!--Task assigned to me-->
                        {{#each issues}}
                        <div class="full-width-box white-background mt-4 p-2 hover-shadow-box">
                            <div class="row align-items-center">
                                <div class="col-1 d-flex align-items-center d-none d-lg-block text-center"
                                    style="height: 100%; margin-right: -25px;">
                                    <i class="bi bi-exclamation-circle color-red fs-1"></i>
                                </div>

                                <div class="col-md-9 col-9" style="flex-grow: 1;">

                                    <div class="row align-items-center">
                                        <div class="col col-sm-1 text-center">
                                            <div class="fs-6 fw-medium color-deep-violet">
                                                Type
                                            </div>
                                        </div>

                                        <div class="col text-center">
                                            <div class="fs-6 fw-medium color-deep-violet">
                                                Project
                                            </div>
                                        </div>

                                        <div class="col col-sm-3 text-center">
                                            <div class="fs-6 fw-medium color-deep-violet">
                                                Title
                                            </div>
                                        </div>

                                        <div class="col d-none d-lg-block text-center">
                                            <div class="fs-6 fw-medium color-deep-violet">
                                                Created By
                                            </div>
                                        </div>

                                        <div class="col text-center d-none d-sm-block">
                                            <div class="fs-6 fw-medium color-deep-violet">
                                                Status
                                            </div>
                                        </div>

                                        <div class="col d-none d-md-block text-center">
                                            <div class="fs-6 fw-medium color-deep-violet">
                                                Created Date
                                            </div>
                                        </div>
                                    </div>

                                    <div class="task-description row align-items-center">
                                        <div class="col col-sm-1 text-center p-0">
                                            <div class="fw-medium fs-6 color-red">
                                                Issues
                                            </div>
                                        </div>

                                        <div class="col text-center border-left border-right">
                                            <div class="fw-medium fs-6 color-blue">
                                                {{project_name}}
                                            </div>
                                        </div>

                                        <div class="col col-sm-3 text-center border-right">
                                            <div class="fw-medium fs-6 color-black">
                                                {{description}}
                                            </div>
                                        </div>

                                        <div class="col d-none d-lg-block text-center">
                                            <div class="col">
                                                <i class="bi bi-person-circle color-green" style="font-size: 16pt;"></i>
                                                <div class="fw-medium fs-6 color-black mt-0">
                                                    {{user_name}}
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col text-center border-left border-right d-none d-sm-block">
                                            <div class="fw-medium fs-6 {{statusColor status}}">
                                                {{status}}
                                            </div>
                                        </div>

                                        <div class="col text-center d-none d-md-block">
                                            <div class="fw-medium fs-6 color-black">
                                                {{formatDate created_date}}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- view-detail -->
                                <div class="col-3 col-sm-2 p-2 d-flex align-items-center" style="height: 100%;">
                                    <div class="view-detail hover-to-bg-light-violet clickable"
                                        onclick="location.href='/project/{{project_id}}/issues/getIssue?issueId={{issue_id}}';">
                                        <i class="bi bi-box-arrow-right color-blue d-none d-md-block"
                                            style="font-size: 18pt;"></i>
                                        <span class="color-blue fs-6 fw-medium ps-2 text-center">View Detail</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="right-below-toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <img src="/img/app-icon.png" class="rounded me-2" alt="..." style="height: 1.2rem;" />
                <strong class="me-auto">Server Notification</strong>
                <small>Just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body"></div>
        </div>
    </div>

    <div class="modal fade" id="modal-create-project" tabindex="-1" role="dialog" aria-labelledby="modalTitleId"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg" role="document">
            <div class="modal-content align-items-center fw-bold color-deep-violet primary-background"
                style="padding: 0 6%;">
                <div class="modal-header" style="border-bottom: none;">
                    <p class="modal-title fs-3" id="modalTitleId">
                        Add New Project
                    </p>
                </div>
                <div class="modal-body" style="border-bottom: none; width: 100%;">
                    <div class="row mb-3">
                        <div class="col">
                            <label for="project-name">
                                Project Name <span style="color: #F0270C;">*</span> :
                            </label>
                            <input type="text" name="project-name" class="form-control mt-2" id="projectNameInput"
                                placeholder="Your Project Name">
                            <div id="projectNameError-1" class="text-danger fs-6 fw-normal" style="display: none;">
                                Please
                                enter project name</div>
                            <div id="projectNameError-2" class="text-danger fs-6 fw-normal" style="display: none;">This
                                project name is existing</div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="create-with-sample-data">
                                <label class="form-check-label fs-6 fw-medium color-black"
                                    for="create-with-sample-data">
                                    Create project with sample data
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="border-top: none;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Close
                    </button>
                    <button type="button" class="btn btn-primary" id="create-project-button">Create</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-add-user" tabindex="-1" role="dialog" aria-labelledby="modalTitleId"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg" role="document">
            <div class="modal-content align-items-center fw-bold color-deep-violet primary-background"
                style="padding: 0 6%;">
                <div class="modal-header" style="border-bottom: none;">
                    <p class="modal-title fs-3" id="modalTitleId">
                        Add New User To Project
                    </p>
                </div>
                <div class="modal-body" style="border-bottom: none; width: 100%;">
                    <div class="row mb-3">
                        <div class="col">
                            <label for="user-email-input">
                                User Email <span style="color: #F0270C;">*</span> :
                            </label>
                            <input type="text" name="user-email-input" id="userEmailInput" class="form-control mt-2"
                                placeholder="user@gmail.com">

                            <div id="userEmailError-1" class="text-danger fs-6 fw-normal" style="display: none;">Please
                                enter user email</div>
                            <div id="userEmailError-2" class="text-danger fs-6 fw-normal" style="display: none;">This
                                user
                                email is already exist in system</div>
                            <div id="userEmailError-3" class="text-danger fs-6 fw-normal" style="display: none;">This
                                user
                                email is incorrect</div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label for="user-role">
                                User Role <span style="color: #F0270C;">*</span> :
                            </label>
                            <select name="user-role" class="form-select mt-2" aria-label="Default select example"
                                id="userRoleInput" required>
                                <option value="" selected>Select Role</option>
                                <option value="Manager">Manager</option>
                                <option value="Tester">Tester</option>
                                <option value="Developer">Developer</option>
                            </select>
                            <div id="userRoleError" class="text-danger fs-6 fw-normal" style="display: none;">Please
                                select
                                user role</div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="border-top: none;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Close
                    </button>
