<!doctype html>
<html lang="en">

<head>
    <title>{{title}}</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;700&display=swap" rel="stylesheet">
    <link href="/css/project.css" rel="stylesheet">
    <link href="/css/navbar-responsive.css" rel="stylesheet">

    {{#if cssFile}}
    <link href="/css/{{cssFile}}" rel="stylesheet">
    {{/if}}
</head>

<body>
    <div class="container-fluid" style="height: 100vh; padding: 0;">
        <div class="" style="height: 100%; display: flex; flex-direction: column; padding: 0; margin: 0;">
            <div class="row header align-items-center justify-content-between flex-row"
                style="min-height: 60px; padding: 0; width: 100%;">
                <div class="col-auto">
                    <a href="/">
                        <img class="logo" src="/img/app-icon.png" alt="logo"
                            style="height: 40px; width: 40px; margin-left: 40px;" />
                    </a>
                </div>
                <div class="col-auto search-bar">
                    <div class="form">
                        <input type="text" id="search-input" class="form-control" placeholder="Search anything ..."
                            style="color: #23235F; font-weight: 300;" />
                        <i class="bi bi-search" style="opacity: 50%;"></i>
                    </div>
                </div>
                <div class="col-auto header-append">
                    <i class="bi bi-bell fs-4 hover-icon"></i>
                    <i class="bi bi-person-circle fs-4 hover-icon" style="margin-left: 20px;"></i>
                    <div class="dropdown-button" style="display: inline;">
                        <a class="" type="button" id="dropDownMenu" data-bs-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false" style="color: #000;">
                            <i class="bi bi-chevron-down" style="color: #5051F9;"></i>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropDownMenu">
                            <span id="profile-dropdown" class="dropdown-item"
                                style="pointer-events: none; cursor: default;"></span>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Profile</a>
                            <a class="dropdown-item" href="#">Settings</a>
                            <a class="dropdown-item" href="#" onclick="logout()">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main flex-grow-1" style="display: flex; flex-direction: row; width: 100%;">
                <div class="sidebar d-flex flex-column justify-content-evenly" style="width: 120px;">
                    <a href="/">
                        <div class="sidebar-element">
                            <div class="icon">
                                <i class="bi bi-house-heart"></i>
                            </div>
                            <div class="text">
                                <span>Home</span>
                            </div>
                        </div>
                    </a>
                    <a class="active" href="#home">
                        <div class="sidebar-element">
                            <div class="icon">
                                <i class="bi bi-kanban"></i>
                            </div>
                            <div class="text">
                                <span>Projects</span>
                            </div>
                        </div>
                    </a>
                    <a href="#home">
                        <div class="sidebar-element">
                            <div class="icon">
                                <i class="bi bi-person-bounding-box"></i>
                            </div>
                            <div class="text">
                                <span>Administrator</span>
                            </div>
                        </div>
                    </a>
                    <a href="#home">
                        <div class="sidebar-element">
                            <div class="icon">
                                <i class="bi bi-rocket-takeoff"></i>
                            </div>
                            <div class="text">
                                <span>Performance</span>
                            </div>
                        </div>
                    </a>
                    <a href="#home">
                        <div class="sidebar-element">
                            <div class="icon">
                                <i class="bi bi-clipboard2"></i>
                            </div>
                            <div class="text">
                                <span>Task</span>
                            </div>
                        </div>
                    </a>
                    <a href="#home">
                        <div class="sidebar-element">
                            <div class="icon">
                                <i class="bi bi-box-seam"></i>
                            </div>
                            <div class="text">
                                <span>Productivity</span>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="main-content"
                    style="background-color: #f3f4f8; display: flex; flex-direction: column; width: calc(100% - 120px);">
                    <nav id="func-navbar" class="navbar navbar-expand-lg navbar-light bg-light">
                        <div class="container-fluid">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                    <li class="nav-item"><a href="/project/{{projectId}}/overview"
                                            class="nav-link">Overview</a></li>
                                    <li class="nav-item"><a href="/project/{{projectId}}/requirement"
                                            class="nav-link">Requirement</a></li>
                                    <li class="nav-item"><a href="/project/{{projectId}}/module"
                                            class="nav-link">Modules</a></li>
                                    <li class="nav-item"><a href="/project/{{projectId}}/release"
                                            class="nav-link">Release</a></li>
                                    <li class="nav-item"><a href="/project/{{projectId}}/testcase"
                                            class="nav-link">Testcase</a></li>
                                    <li class="nav-item"><a href="/project/{{projectId}}/testplan" class="nav-link">Test
                                            Plan</a></li>
                                    <li class="nav-item"><a href="/project/{{projectId}}/testrun" class="nav-link">Test
                                            Run & Result</a></li>
                                    <li class="nav-item"><a href="/project/{{projectId}}/issues"
                                            class="nav-link">Issues</a></li>
                                    <li class="nav-item"><a href="/project/{{projectId}}/report"
                                            class="nav-link">Reports</a></li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                    <div class="project-info d-flex justify-content-between align-items-center"
                        style="height: 8vh; text-align: center; margin: 0 80px; min-height: 70px;">
                        <nav class="project-detail-nav" style="display: inline-block;">
                            <a href="#">Project</a>
                            <a href="#">{{projectName}}</a>
                            {{#if part}}
                                <a href="#">{{part}}</a>
                            {{/if}}
                        </nav>
                        {{{content "additional-button"}}}
                    </div>
                    <div class="main-area flex-grow-1 px-3" style="min-height: 600px;">
                        {{{body}}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="right-below-toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <img src="/img/app-icon.png" class="rounded me-2" alt="..." style="height: 1.2rem;">
                <strong class="me-auto">Server Notification</strong>
                <small>Just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body"></div>
        </div>
    </div>

    {{{content "modal"}}}

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
    <script src="/js/navBarResponsive.js"></script>
    <script src="/js/showToast.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        // Function to handle logout
        function logout() {
            axios.post('/auth/logout', {}, {
                headers: {
                    'Content-Type': 'application/json'
                },
                withCredentials: true
            })
                .then((response) => {
                    if (response.status === 200) {
                        document.cookie = "refreshToken=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
                        window.location.href = "/";
                    } else {
                        console.error("Error:", response.statusText);
                    }
                })
                .catch((error) => {
                    console.error("Error:", error);
                });
        }

        // Function to update profile dropdown with Name and Role
        function updateProfileDropdown() {
            axios.get('/auth/info', {}, {
                headers: {
                    'Content-Type': 'application/json'
                },
                withCredentials: true
            })
                .then((response) => {
                    if (response.status === 200) {
                        const profileDropdown = document.getElementById('profile-dropdown');
                        if (profileDropdown) {
                            profileDropdown.innerHTML = `${response.data.name}`;
                        }
                    } else {
                        console.error("Error:", response.statusText);
                    }
                })
                .catch((error) => {
                    console.error("Error:", error);
                });
        }

        // Call updateProfileDropdown when dropdown is clicked
        const dropdownMenu = document.getElementById('dropDownMenu');
        if (dropdownMenu) {
            dropdownMenu.addEventListener('click', updateProfileDropdown);
        }

        //Tooltip
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>


    {{{content "script"}}}
</body>

</html>