<!-- title - first line -->
<div class="container-fluid row align-items-center mt-3">
  <div class="col-lg-8 col-sm-6 col-xs-12">
    <span class="fw-bold fs-4 color-deep-violet">
      Issues
    </span>

    <i class="bi bi-caret-right-fill"></i>

    <span class="fw-bold fs-4 color-deep-violet" style="margin-right: 30px;">
      ISS-{{issue.issue_id}}
    </span>

    <span class="color-black fw-bold fs-6 d-lg-inline d-block">
      {{issue.title}}
    </span>

  </div>

  <div class="col-lg-4 col-sm-6 col-xs-12 align-end p-0 mt-2">
    <span
      class="button-blue p-md-2 p-1 hover-to-bg-light-violet clickable gray-background"
      onclick="location.href='/project/{{projectId}}/issues';"
    >
      <span class="color-deep-violet fw-medium fs-5 ps-1 pe-1">Go Back</span>
    </span>

    <span
      class="button-blue p-md-2 p--1 hover-to-bg-darken-blue ms-3 clickable"
      onclick="location.href='/project/{{projectId}}/issues/editIssue?issueId={{issue.issue_id}}';"
    >
      <span class="color-deep-violet fw-medium fs-5 ps-1 pe-1">Update</span>
    </span>
  </div>
</div>

<!-- content -->
<div class="row">

  <!-- left side -->
  <div class="col-md-7 col-12 border-right ps-5 pe-5 pt-4 pb-3">
    <!--title-->
    <div>
      <div class="fw-medium fs-4 color-deep-violet">
        Title :
      </div>
      <div class="fw-medium fs-6 full-width-box white-background p-2 mt-1">
        {{issue.title}}
      </div>
    </div>

    <!--priority-->
    <div class="mt-3">
      <div class="fw-medium fs-4 color-deep-violet">
        Priority :
      </div>
      <div
        class="fw-medium fs-6 full-width-box white-background p-2 mt-1 {{priorityColor issue.priority}}"
      >
        {{issue.priority}}
      </div>
    </div>

    <!--Status-->
    <div class="mt-3">
      <div class="fw-medium fs-4 color-deep-violet">
        Status :
      </div>
      <div
        class="fw-medium fs-6 full-width-box white-background p-2 mt-1 {{statusColor issue.status}}"
      >
        {{issue.status}}
      </div>
    </div>

    <!--Issue Type-->
    <div class="mt-3">
      <div class="fw-medium fs-4 color-deep-violet">
        Issue Type :
      </div>
      <div class="fw-medium fs-6 full-width-box white-background p-2 mt-1">
        {{issue.type}}
      </div>
    </div>

    <!--Module-->
    <div class="mt-3">
      <div class="fw-medium fs-4 color-deep-violet">
        Module :
      </div>
      <div class="fw-medium fs-6 full-width-box white-background p-2 mt-1">
        {{testcase.module}}
      </div>
    </div>

    <!--Test case failed-->
    <div class="mt-3">
      <div class="fw-medium fs-4 color-deep-violet">
        Test case failed :
      </div>
      <div class="fw-medium fs-6 full-width-box white-background p-2 mt-1">
        Testcase-{{testcase.testcase_id}}: {{testcase.testcase}}
      </div>
    </div>

    <!--Description-->
    <div class="mt-3">
      <div class="fw-medium fs-4 color-deep-violet">
        Description :
      </div>
      <div class="fw-medium fs-6 full-width-box white-background p-2 mt-1">
        {{issue.description}}
      </div>
    </div>
  </div>

  <!-- right side (information) -->
  <div class="col-md-5 col-12 mt-sm-4 mt-md-0 ps-4 pe-3 pt-4 pb-3">
    <!-- information -->
    <div>
      <i class="bi bi-info-circle-fill color-deep-violet fs-5"></i>
      <span class="fw-medium fs-5 color-black ps-2">
        Information
      </span>
    </div>

    <!-- created by-->
    <div class="mt-5">
      <div class="fw-medium fs-4 color-deep-violet">
        Created by :
      </div>
      <div class="mt-2">
        <div class="row">
          <div class="col-2 text-center">
            <i class="bi bi-person-circle color-green fs-4"></i>
          </div>
          <div class="col-10">
            <div class="fw-medium fs-6 full-width-box white-background p-2">
              {{created_user.name}}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- assigned to-->
    <div class="mt-4">
      <div class="fw-medium fs-4 color-deep-violet">
        Assigned to :
      </div>
      <div class="mt-2">
        <div class="row">
          <div class="col-2 text-center">
            <i class="bi bi-person-circle color-blue fs-4"></i>
          </div>
          <div class="col-10">
            <div class="fw-medium fs-6 full-width-box white-background p-2">
              {{assigned_user.name}}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Created date-->
    <div class="mt-4">
      <div class="fw-medium fs-4 color-deep-violet">
        Created date :
      </div>
      <div class="mt-2">
        <div class="row">
          <div class="col-2 text-center">
            <i class="bi bi-calendar-plus fs-4 color-black"></i>
          </div>
          <div class="col-10">
            <div class="fw-medium fs-6 full-width-box white-background p-2">
              {{formatDate issue.created_date}}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Comment-->
    <div class="mt-4">
      <div class="fw-medium fs-4 color-deep-violet">
        Comment :
      </div>
      {{#each comments}}
      <div class="mt-2">
        <div class="row">
          <div class="col-2 text-center">
            <i
              class="bi bi-person-circle color-blue"
              style="font-size: 16pt;"
            ></i>
            <div class="fw-medium fs-6 color-black mt-0">
              {{name}}
            </div>
          </div>
          <div class="col-10">
            <div class="fw-medium fs-6 full-width-box white-background p-2">
              {{comment}}
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>


